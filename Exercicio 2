public class FerradurasCavalos {
    public static void main(String[] args) {
        int numCavalos = 283;
        int ferradurasPorCavalo = 4; // Cada cavalo tem 4 ferraduras
        
        int totalFerraduras = numCavalos * ferradurasPorCavalo;
        
        System.out.println("Total de ferraduras necess√°rias: " + totalFerraduras);
    }
}
